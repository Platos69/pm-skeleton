{{#each erros}}
    <div class='alert alert-danger'>{{texto}}</div>
{{else}}

{{/each}}

<h2>Edição de postagem</h2>
<div class='card'> 
    <div class='card-body'>
        <form action='/admin/postagens/edit' method='POST'>
            <input type='hidden' value='{{postagem._id}}' name='id'>
            <label for='titulo'>Titulo: </label>
            <input type='text' name='titulo' class='form-control' value='{{postagem.titulo}}' required><br>
            <label for='slug'>Slug: </label>
            <input type='text' name='slug' class='form-control' value='{{postagem.slug}}' required><br>
            <label for='descricao'>Descrição: </label>
            <input type='text' name='descricao' class='form-control' value='{{postagem.descricao}}' required><br>
            <label for='conteudo'>Conteúdo: </label>
            <textarea name='conteudo' class='form-control' required>{{postagem.conteudo}}</textarea><br>
            <label for='categoria'>Categorias: </label>
            <select name='categoria' class='custom-select'>
                {{#each categorias}}
                    <option value='{{_id}}'>{{nome}}</option>
                {{else}}
                    <option value='0'>Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>
            <button class='btn btn-success mt-3' type='submit'>Editar postagem</button>
        </form> 
    </div>
</div>